.containerPeople
    .row
        .col-md-4.userSearch
            input.form-control(type="text" placeholder="Search", ng-model="searchUsers")
    br
    ul#nolist
        li(ng-repeat="user in users | filter: searchUsers")
            div.oneUser
                .row
                    .col-md-10
                        img(src="{{ user.profilePic }}", width="130px" , height="130px")
                        h4 {{ user.firstName }}  {{ user.lastName }}
                        a.button.btn.btn-primary(href="#/users/{{user._id}}") View Profile
            br