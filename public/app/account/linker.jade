.userContainer
    .col-md-4
        img.profileImg(src="{{ identity.currentUser.profilePic }}" , width="50px" , height="50px")
        .profileData {{ identity.currentUser.firstName }} {{ identity.currentUser.lastName }}
        textarea#post-form.form-control(rows="4" , placeholder="Share to world of LinkMe", ng-model='user.activity')
        button#post-btn.btn.btn-primary.pull-right(ng-click="post(user)") Link
        br
        br
        br
        .mypost {{ identity.currentUser.activity }}

        ul.noListStyle
            li(ng-repeat="user in users", ng-show="user.activity > 0")
                img.profileImg(src="{{ user.profilePic }}" , width="50px" , height="50px")
                .profileData {{ user.firstName }} {{ user.lastName }}
                .postbody {{ user.activity}}