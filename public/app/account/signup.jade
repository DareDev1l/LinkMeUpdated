.container.ng-scope
    .bodyREG
        .avail
            .myWell
                h4.register-header Create an account
            form.form-horizontal(name="signUpForm")
                fieldset
                    .form-group
                        label.col-md-2.control-label(for="first-name") First Name *
                        .col-md-10
                            input.form-control.yfname(type="text", placeholder="First Name", ng-model="user.firstName", id="first-name", required)
                    .form-group
                        label.col-md-2.control-label(for="last-name" ) Last Name *
                        .col-md-10
                            input.form-control.ylname(type="text", placeholder="Last Name", ng-model="user.lastName", id="last-name", required)
                    .form-group
                        label.col-md-2.control-label(for="username") Username *
                        .col-md-10
                            input.form-control.yuname(type="text", placeholder="Username", ng-model="user.username", id="username", required)
                    .form-group
                        label.col-md-2.control-label(for="email") E-mail *
                        .col-md-10
                            input.form-control(type="email", placeholder="E-mail", ng-model="user.email", id="email", required)
                    .form-group
                        label.col-md-2.control-label(for="password") Password *
                        .col-md-10
                            input.form-control.ypass(type="password", placeholder="Password", ng-model="user.password", id="password", required)
                    .form-group
                        label.col-md-2.control-label(for="profilePic") Picture
                        .col-md-10
                            input.form-control.yPicture(type="text", placeholder="Place URL Here (optional)", ng-model="user.profilePic" id="profilePic")
                    .form-group
                        label.col-md-2.control-label(for="bornDate") Date of birth
                        .col-md-10
                            input.form-control.yDate(type="text", placeholder="mm/dd/yyyy", ng-model="user.bornDate"  id="bornDate")
                    .form-group
                        label.col-md-2.control-label(for="bornPlace") Place of birth
                        .col-md-10
                            input.form-control.yPlace(type="text", ng-model="user.bornPlace", placeholder="Where are you born?" id="bornPlace")
                    .form-group
                        label.col-md-2.control-label(for="job") Working as
                        .col-md-10
                            input.form-control.yJob(type="text", placeholder="Your job", ng-model="user.job" id="job")
                    .form-group
                        label.col-md-2.control-label(for="livePlace") Lives in
                        .col-md-10
                            input.form-control.ylPlace(type="text", placeholder="Where do you live?", ng-model="user.livePlace" id="livePlace")
                    .pull-right
                        button.btn.linkBlack(ng-click="signup(user)", ng-disabled="signUpForm.$invalid") Register
                        a.btn.linkBlack#cancel(href="#/") Cancel