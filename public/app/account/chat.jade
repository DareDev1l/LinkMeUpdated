.container
    input#field(style='width:350px;')
    input#send(type='button', value='send')
    #content(style='width: 500px; height: 300px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: scroll;')
script(src='/socket.io/socket.io.js')
script.
    var messages = [];
    var socket = io.connect('http://localhost:3030/#/chat');
    var field = document.getElementById("field");
    var sendButton = document.getElementById("send");
    var content = document.getElementById("content");
    var image = document.getElementById('userImg').src;
        socket.on('message', function (data) {
        if(data.message) {
            messages.push(data.message);
            var html = '';
            for(var i=0; i<messages.length; i++) {
                html += '<img src="' + image + '" width="50x" height="50px"> ' + messages[i] + '<br />';
            }
            $('#content').prepend(html);
        } else {
            console.log("There is a problem:", data);
        }
    });
        sendButton.onclick = function() {
        var text = field.value;
        socket.emit('send', { message: text });
    };