extends includes/layout
block main-content
    header.nav.navbar-inverse.navbar-fixed-top.navbar-default(ng-controller="NavbarCtrl")
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#/") LinkMe
            .navbar-collapse.collapse
                ul.nav.navbar-nav
                    li(ng-show="identity.isAuthenticated()")
                        a(href="#/courses") Articles
                    li(ng-show="identity.isAuthenticated()")
                        a(href="#/support") Support
                div(ng-include="'partials/account/login'")
                .chatTab(ng-controller="ChatTabCtrl")
                    button.chat.dropdown-toggle(ng-show="identity.isAuthenticated()", data-toggle='dropdown', id="chatLab") Chat
                    ul.dropdown-menu.chatList(aria-labelledby="chatLab")
                        li(ng-repeat="user in chatUsers")
                            .allPeople
                                img(src="{{user.profilePic}}" width="25px" height="25px")
                                h4.chatNames {{ user.firstName }} {{ user.lastName }}
    .leftNavbar.nav.navbar-fixed-left.navbar-default.navbar-collapse.collapse
        ul.nav.navbar-nav
            li
                a.glyphicon.glyphicon-home.icon(href="#/")
            li
                a.glyphicon.glyphicon-user.icon(href="#/users")
            li
                a.glyphicon.glyphicon-globe.icon(href="#/linker")
            li
                a.glyphicon.glyphicon-envelope.icon(href="#/chat")

    section.container
    div(ng-view)

    //footer
        p.text-center
            | LinkMe 2014
